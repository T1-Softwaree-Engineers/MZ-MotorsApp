<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".person">

    <!--
        *Profile
        *My post
        *Sell Car
        *Boton LogOUT

    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topbar">

        <TextView
            android:id="@+id/txtlogo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/racing_sans_one"
            android:gravity="center"
            android:text="MZMOTORS"
            android:textColor="#0066CC"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/txtmypost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtlogo"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="User Account"
            android:textColor="#262626"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/post_container"
        android:background="@drawable/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <!--Boton Perfil-->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="0dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/ic_baseline_person_24"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Profile"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Boton MyPost-->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnMyPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_below="@+id/btnProfile"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="0dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_input_24"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="My Post"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!--Boton Sell Car-->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnvender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnMyPost"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="0dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_attach_money_24"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Sell Car"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/line"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:background="#d5d8dc"
            android:layout_below="@+id/btnvender"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/btnlogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="15dp"
            android:text="LOG OUT"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#F44336"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#F44336"
            app:cornerRadius="10dp"
            />

    </RelativeLayout>

</RelativeLayout>