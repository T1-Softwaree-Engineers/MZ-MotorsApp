<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:id="@+id/post_container"
        android:background="@drawable/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/deleteFav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_baseline_delete_24"
                android:textSize="20dp"
                android:fontFamily="@font/poppins">
            </TextView>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/container_post"
            android:layout_below="@+id/container_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/carro"
                android:layout_width="199dp"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mercedes" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/carro"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="$ 000,000"
                android:textColor="#262626"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_below="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/carro"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Mercedes AMG"
                android:textColor="#262626"
                android:textSize="15dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>